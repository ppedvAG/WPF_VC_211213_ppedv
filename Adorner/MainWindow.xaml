<Window x:Class="AdornerBsp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdornerBsp"
        mc:Ignorable="d"
        Title="MainWindow" Height="229" Width="384">
    <StackPanel Margin="30">

        <!--Adorner sind "visuelle Erweiterungen" von Steuerelemente, welche bei Bedarf in einem sog.
        AdornerLayer ÜBER die bestehenden Elemente drübergezeichnet werden. Dafür haben die meißten
        UIElemente ein AdornerLayer, in welches diese eingefügt werden können. Vgl. CodeBehind-->
        <TextBox x:Name="Tbx_Show" Width="80" HorizontalAlignment="Center"/>

    </StackPanel>
</Window>
